@model IEnumerable<MvcApplication3.Models.CARGO>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Crear nuevo cargo", "Create")
</p>
<table>
    <tr>
        <th>
            Codigo
        </th>
        <th>
            Cargo
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.codigo_cargo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.descripcion)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new {id=item.codigo_cargo}) |
            @Html.ActionLink("Detalles", "Details", new { id=item.codigo_cargo }) |
            @Html.ActionLink("Eliminar", "Delete", new {id=item.codigo_cargo})
        </td>
    </tr>
}

</table>
